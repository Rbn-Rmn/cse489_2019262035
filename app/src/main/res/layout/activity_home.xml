<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:orientation="vertical"
    android:background="#8CB9BD">>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Class Summary"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#EEEEEE"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:padding="12dp"
        >
        <TableRow>
            <TextView
                android:text="Name"
                android:textSize="16sp"/>
            <TextView
                android:text=":"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
            <TextView
                android:id="@+id/tvName"
                android:text=""
                android:textSize="16sp"/>
            <EditText
                android:maxLines="1"
                android:width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Id"
                android:textSize="16sp"/>
            <TextView
                android:text=":"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
            <TextView
                android:id="@+id/tvID"
                android:text=""
                android:textSize="16sp"/>
            <EditText
                android:maxLines="1"
                android:width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="Course"
                android:textSize="16sp"/>
            <TextView
                android:text=":"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
            <RadioGroup
                android:id="@+id/radioGrp1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/radioBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="cse477"/>

                <RadioButton
                    android:id="@+id/radioBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="cse489" />


            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGrp3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/radioBtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="cse479"/>
                <RadioButton
                    android:id="@+id/radioBtn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="cse495"/>

            </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Type"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:text=":"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_gravity="center_vertical"
                />
            <RadioGroup
                android:id="@+id/radioGrp2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radioBtnTheory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Theory"/>
                <RadioButton
                    android:id="@+id/radioBtnLab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab"/>
            </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Date"
                android:textSize="16sp"/>
            <TextView
                android:text=":"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
            <EditText
                android:id="@+id/etDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="16sp"
                android:inputType="date"
                android:autofillHints=""
                android:focusable="false"
                android:clickable="true"
                android:onClick="openCalendar"
                tools:ignore="LabelFor" />
        </TableRow>


        <TableRow>
            <TextView
                android:text="lecture"
                android:textSize="16sp"/>
            <TextView
                android:text=":"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
            <EditText
                android:id="@+id/etLecture"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="16sp"
                android:inputType="numberSigned"
                android:hint="Enter Lecture Numnber"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="topic"
                android:textSize="16sp"/>
            <TextView
                android:text=":"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
            <EditText
                android:id="@+id/etTopic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="16sp"
                android:inputType="textCapWords"
                android:hint="Enter Topic Title"
                android:autofillHints="" />
        </TableRow>

        <TextView
            android:text="Summary of the lecture"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"

            >
            <EditText
                android:id="@+id/etSummary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:background="@color/white"
                android:textSize="16sp"
                android:layout_margin="2dp"
                android:inputType="textCapWords|textMultiLine"
                android:padding="8dp"
                android:hint="insert the keywords or phrases discussed_in_the_class_each_keyword_or_phrase_must_be_sperated_by_comma"
                android:autofillHints="" />
        </FrameLayout>

    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="cancel"
            android:backgroundTint="#C6EBC5"
            android:textColor="@color/black"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="save"
            android:backgroundTint="#C6EBC5"
            android:textColor="@color/black"
            />
    </LinearLayout>
</LinearLayout>

